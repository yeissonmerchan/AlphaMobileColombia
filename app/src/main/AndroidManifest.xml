<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.alphamobilecolombia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.DIAL" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:allowBackup="true"
        android:hasCode="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:targetSandboxVersion="2"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:hasCode">
        <activity
            android:name=".mvp.activity.BrandingActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--*************************************************************************** MODULOS-->

        <!--SCANNER-->
        <activity
            android:name=".mvp.activity.ScannerActivity"
            android:label="@string/title_activity_scanner"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--android:launchMode="singleTask"-->

        <!--DATOS ADICIONALES-->
        <activity
            android:name=".mvp.activity.AdditionalDataActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleInstance"
            />

        <!--PAGADURÍA-->
        <activity
            android:name=".mvp.activity.PaymentActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--TIPO CLIENTE-->
        <activity
            android:name=".mvp.activity.CustomerTypeActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--DATOS DESPRENDIBLES-->
        <activity
            android:name=".mvp.activity.VoucherDataActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--DESCUENTOS POR DESPRENDIBLE-->
        <activity
            android:name=".mvp.activity.VoucherDiscountActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" /> <!--HACE QUE EL DISEÑO NO SE ENCOJA CUANDO EL TECLADO APARECE-->

        <!--OTROS DESCUENTOS-->
        <activity
            android:name=".mvp.activity.OtherDiscountsActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" /> <!--HACE QUE EL CAMPO "OTROS" NO PIERDA EL FOCO CUANDO EL TECLADO APARECE-->

        <!--PAGOS A TERCEROS-->
        <activity
            android:name=".mvp.activity.PaymentsThirdPartiesActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--SIMULADOR DE CREDITO-->
        <activity
            android:name=".mvp.activity.CreditSimulatorActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--RESUMEN DE CONDICIONES-->
        <activity
            android:name=".mvp.activity.ConditionsSummaryActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--***************************************************************************-->

        <activity
            android:name=".mvp.activity.VersionUpdateActivity"
            android:label="@string/title_activity_version_update"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.activity.UploadFileActivity"
            android:label="@string/title_activity_upload_files"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.activity.ProcessCompletedActivity"
            android:label="@string/title_activity_process_completed"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />



        <activity
            android:name=".mvp.activity.ModuleActivity"
            android:label="@string/title_activity_modulo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.activity.QueryCreditActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>