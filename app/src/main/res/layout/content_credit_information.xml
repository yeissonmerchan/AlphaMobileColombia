<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alphamobilecolombia.mvp.activity.CreditInformationActivity"
    tools:showIn="@layout/activity_credit_information">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="80dp"
            android:layout_marginBottom="100dp"
            android:id="@+id/lyt_controls"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity= "left"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:ems="20"
                android:id="@+id/txtNombres"
                android:text="Información del credito:"
                android:longClickable="true"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="@color/colorHeader"
                android:scrollbars = "vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity= "left"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:ems="20"
                android:id="@+id/txtPagaduria"
                android:text="Pagaduría"
                android:longClickable="true"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="@color/colorHeader"
                android:scrollbars = "vertical"/>

            <Spinner
                android:id="@+id/spinner_pagaduria"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity= "left"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:ems="20"
                android:id="@+id/txtDestino"
                android:text="Destino del crédito"
                android:longClickable="true"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="@color/colorHeader"
                android:scrollbars = "vertical"/>

            <Spinner
                android:id="@+id/spinner_destino_credito"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity= "left"
                android:drawSelectorOnTop="true"
                android:typeface="serif"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:ems="20"
                android:id="@+id/txtTipoEmpleado"
                android:text="Tipo de empleado"
                android:longClickable="true"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="@color/colorHeader"
                android:scrollbars = "vertical"/>

            <Spinner
                android:id="@+id/spinner_tipo_empleado"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_height="wrap_content" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity= "left"-->
                <!--android:drawSelectorOnTop="true"-->
                <!--android:typeface="serif"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:inputType="textMultiLine"-->
                <!--android:ems="20"-->
                <!--android:id="@+id/txtTipoContrato"-->
                <!--android:text="Tipo de contrato"-->
                <!--android:longClickable="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:textSize="18dp"-->
                <!--android:textColor="@color/colorHeader"-->
                <!--android:scrollbars = "vertical"/>-->

            <!--<Spinner-->
                <!--android:id="@+id/spinner_tipo_contrato"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_marginTop="10dp"-->
                <!--style="@style/Widget.AppCompat.Spinner.Underlined"-->
                <!--android:layout_height="wrap_content" />-->

            <Button
                android:id="@+id/btn_new_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:background="@color/colorHeader"
                android:text="@string/btn_next"
                android:textColor="@color/colorSubtext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_password"
                app:layout_constraintVertical_bias="0.2" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
