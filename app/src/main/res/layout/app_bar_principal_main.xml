<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".mvp.activity.DemoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/colorToolBar"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:id ="@+id/vive"
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:textColor="#ffffffff"
                android:background="@mipmap/logo_principal"
                android:layout_gravity="top|left"
                app:elevation="10dp"
                />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="2dp"
                android:layout_height="57dp"
                android:background="@drawable/line"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:text="Inicio"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorHeader" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <Button
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:id ="@+id/user"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:textColor="#ffffffff"
                        android:background="@mipmap/logo_user"
                        android:layout_gravity="right"
                        app:elevation="10dp"
                        />
                    <TextView
                        android:id="@+id/textView2"
                        android:textSize="12dp"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/colorNameUser"
                        android:text="Hola Camilo" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:elevation="-2dp"
        >


    </LinearLayout>


    <include
        android:id="@+id/include"
        layout="@layout/content_principal_main"
        />

        <Button
            android:id ="@+id/fab"
            android:layout_width="55dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:textColor="#ffffffff"
            android:background="@mipmap/logo_windows"
            android:layout_gravity="bottom|center_horizontal"
            app:elevation="20dp"
            android:layout_margin="@dimen/fab_margin"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>